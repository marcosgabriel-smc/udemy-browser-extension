{
  "manifest_version": 3,
  "name": "Udemy Course Time Tracker",
  "version": "1.0",
  "description": "Shows remaining time for Udemy courses",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 