{
  "manifest_version": 2,
  "name": "Udemy Course Time Tracker",
  "version": "1.0",
  "description": "Shows remaining time for Udemy courses",
  "permissions": ["*://*.udemy.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.udemy.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "udemy-course-time-tracker@example.com"
    }
  }
} 